
<!-- page -->
<div class="container">
	<div class="row">
		<div class="span12">
			<h1><%=@project.title%></h1>
			<div class="pad15"></div>
			<img src="<%= @project.image_link%>" alt="" />

			<div class="pad30"></div>
			<!-- 1 -->
			
				<div class="span6">
				</div>	
				<div class="span6">
					<h4 class="left">About</h4>
					<p><%= @project.project_description %></p>
				</div>
				
			<div class="pad45"></div>
			<!-- 2 -->	
<div class="span6">
</div>
				<div class="span6">
					<h4 class="right">Links</h4>
					<ul>
						<li><a href="<%= @project.project_link %>">Project Link</a></li>
						<li><a href="<%= @project.repo_link %>">Repo Link</a></li>
					</ul>
				</div>
				
			</div>	
			<div class="pad45"></div>
			<!-- 3 -->	
				<% if @project.erd_image != nil %>
				<div class="span12">
					<h4 class="left"> Database ERD </h4>
					<img src="<%= @project.erd_image%>" alt=""  />	
				</div>
				<% end %>
				
			</div>	
		</div>
	</div>
</div>
<div class="clearfix"></div>
<div class="pad45"></div>
<div class="pagination">
	<ul>
		<% if @project.id > 1 %>
		<li><a href="/portfolio/<%=@project.id - 1%>" class="icon-angle-left"></a></li>
		<% end %>
		<% if @project.id < Project.count.to_i %>
		<li><a href="/portfolio/<%=@project.id + 1%>" class="icon-angle-right"></a></li>
		<% end %>
	</ul><br>
	<ul> <li> <a href="/portfolio">Back </a></li></ul>
</div>
<!-- // END -->


<!-- SCRIPTS -->
<script type="text/javascript" src="js/jquery.js"></script>
<script type="text/javascript" src="js/bootstrap.min.js"></script>
<script type="text/javascript" src="js/scripts.js"></script>
<script>
//<![CDATA[
$(window).scroll(function() {
	$('.up').each(function(){
		var imagePos = $(this).offset().top;
		var topOfWindow = $(window).scrollTop();
		if (imagePos < topOfWindow+800) {
			$(this).addClass("slideUp");
		}
	});
});
	//]]>
</script> 
<script>
//<![CDATA[
$(window).scroll(function() {
	$('.up2').each(function(){
		var imagePos = $(this).offset().top;
		var topOfWindow = $(window).scrollTop();
		if (imagePos < topOfWindow+400) {
			$(this).addClass("slideUp");
		}
	});
});
	//]]>
</script> 
</body>
</html>
